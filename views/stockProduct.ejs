<% include header.ejs %>
    <% include stockProductModal.ejs %>
        <div class="p-4 col-12">
            
            <h4 class=" font-weight-bold page-header">Stock Product</h4>
            <hr>
            <table class="table table-bordered table-sm">
                <thead style="background-color: #757574 ; color : white">
                    <tr>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Product Line</th>
                        <th>Scale</th>
                        <th>Product Vendor</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody style="background-color: #ccccc8">
                <% products.forEach(function(emp){ %>
                    <tr>
                        <td><%= emp.productCode %></td>
                        <td><%= emp.productName %></td>
                        <td>Doll</td>
                        <td><%= emp.productScale %></td>
                        <td><%= emp.productVendor %></td>
                        <td><%= emp.quantityInStock %></td>
                        <td><%= emp.buyPrice %></td>
                        <td>
                            <div class="row m-0">
                                <div class="d-flex">
                                    <button type="button" class="btn btn-outline-dark" id="UpdateBtn">
                <i class="fa fa-pen"></i></button>
                                </div>
                                <div class="d-flex">
                                    <button class="btn btn-outline-dark" id="DelBtn">
                <i class="fa fa-trash"></i></button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <% include stockModalupdate.ejs %>
                    <% include stockDel.ejs %>
                        <% }) %>
                </tbody>
            </table>


            <% include stockModalupdate.ejs %>
                <% include stockDel.ejs %>
                    <button type="button" class="buttonAdd button5 addMenu" id="AddBtn">
                        Add
                    </button>

                    <script src="/javascripts/modal.js"></script>
                    <% include footer.ejs %>
