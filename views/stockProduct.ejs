<div class="p-4 col-12">
  <h4 class=" font-weight-bold page-header">Stock Product</h4>
  <hr>
    <table class="table table-bordered table-sm">
      <thead style="background-color: #757574 ; color : white">
        <tr>
          <th>Product Code</th>
          <th>Product Name</th>
          <th>Product Line</th>
          <th>Scale</th>
          <th>Product Vendor</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Option</th>
        </tr>
      </thead>
      <tbody style="background-color: #ccccc8">
        <tr>
          <td>lol</td>
          <td>Teddy Bear</td>
          <td>Doll</td>
          <td>1 : 14</td>
          <td>C</td>
          <td>30</td>
          <td>699</td>
          <td>
            <div class="row m-0">
              <div class="d-flex">
                <button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#addInsertProduct">
                <i class="fa fa-pen"></i></button>
              </div>
              <div class="d-flex">
                <button class="btn btn-outline-dark">
                <i class="fa fa-trash"></i></button>
              </div>
            </div>
          </td>
        </tr>
      </tbody>
    </table>

    <!-- addInsertModal -->
  <form action="/product/update/" method="POST">
    <div class="modal" id="addInsertProduct">
      <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Stock Product</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Code :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Name :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Line :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Scale :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Vendor :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Product Description :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Quantity Product :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Price :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">MSRP :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Text Description :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">HTML Description :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
            <div class="row my-2">
              <label for="unitCode" class="col-12 col-sm-3 text-sm-right my-auto">Image :</label>
              <input id="unitCode" [(ngModel)]="unitCode" formControlName="unitCode" name="unitCode" type="text"
              class="form-control col-12 col-sm-6 col-md-6">
            </div>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-rounded" style="background-color: #adc5d3" data-dismiss="modal">Submit</button>
          </div>

        </div>
      </div>
    </div>
  </form>
