<button type="button" id="DelBtn">
    <i class="fa fa-trash"></i>
</button>
<!-- The Modal -->
<div id="DelModal" class="modal">
    <div class="" role="document">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title headerModal">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <p style="color: black;">Are you sure to delete this Order?</p>
            </div>
            <div class="modal-footer">
                <form action="/customer/del/" method="POST">
                </form>
                <button type="button" class="btn btn-success" id="canDel">No</button>
                <button type="button" class="btn btn-secondary">Yes</button>
            </div>
        </div>
    </div>
</div>