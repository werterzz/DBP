<button type="button" class="btn btn-outline-dark" data-toggle="modal" data-target="#orderPaymentModal"><i class="fa fa-credit-card"></i></button>
<!-- The Modal -->
<div class="modal" id="orderPaymentModal" data-backdrop="false">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="blackFont">Payment</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="row my-2">
                    <label for="customerNumber" class="col-12 col-sm-3 text-sm-right my-auto">Customer Number :</label>
                    <input id="customerNumber" name="customerNumber" type="text"
                    class="form-control col-12 col-sm-6 col-md-6">
                </div>
                <div class="row my-2">
                    <label for="customerNumber" class="col-12 col-sm-3 text-sm-right my-auto">Payment Date :</label>
                    <input id="customerNumber" name="customerNumber" type="date"
                    class="form-control col-12 col-sm-6 col-md-6">
                </div>
                <div class="row my-2">
                    <label for="customerNumber" class="col-12 col-sm-3 text-sm-right my-auto">Amount :</label>
                    <input id="customerNumber" name="customerNumber" type="text"
                    class="form-control col-12 col-sm-6 col-md-6">
                </div>
                <div class="row my-2">
                    <label for="customerNumber" class="col-12 col-sm-3 text-sm-right my-auto">Total :</label>
                    <input id="customerNumber" name="customerNumber" type="text"
                    class="form-control col-12 col-sm-6 col-md-6">
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Submit</button>
                </div>

            </div>
        </div>
    </div>

</div>