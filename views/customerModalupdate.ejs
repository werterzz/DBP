<div id="UpdateModal<%=cus._id%>" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title headerModal">Update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form action="/customer/update/<%= cus._id %>" method="POST">
                    <form action="/customer/add" id="usrform" method="POST">
                        ID:
                        <input type="number" name="id" value="<%= cus._id %>" />
                        <br /> Name:
                        <input type="text" name="name" value="<%= cus.customerName %>" />
                        <!-- <br /> CustomerNumber:
                        <input type="text" name="cusnum" value="" /> -->
                        <br /> Contact first name:
                        <input type="text" name="conFname" value="<%= cus.contactFirstName %>" />
                        <br /> Contact last name:
                        <input type="text" name="conLname" value="<%= cus.contactLastName %>" />
                        <br /> Phone number:
                        <input type="text" name="phone" value="<%= cus.phone %>" />
                        <br /> Address Line 1:
                        <textarea rows="4" cols="50" name="addr1" form="usrform"><%= cus.addressLine1 %></textarea>
                        <br /> Address Line 2:
                        <textarea rows="4" cols="50" name="addr2" form="usrform"><%= cus.addressLine2 %></textarea>
                        <br /> City:
                        <input type="text" name="city" value="<%= cus.city %>" />
                        <br /> State:
                        <input type="text" name="state" value="<%= cus.state %>" />
                        <br /> Postal code:
                        <input type="number" name="postal" value="<%= cus.postalCode %>" />
                        <br /> Country:
                        <input type="text" name="country" value="<%= cus.country %>" />
                        <br /> Employee Number:
                        <input type="number" name="EmpNum" value="<%= cus.salesRepEmployeeNumber %>" />
                        <br /> Credit limit:
                        <input type="number" name="creditLim" value="<%= cus.creditLimit %>" />
                        <br />
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-success" value="Submit" /></form>
            </div>
        </div>
    </div>
</div>