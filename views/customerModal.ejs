<div id="AddModal" class="modal" tabindex="-1" role="dialog">
    <div class="" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title headerModal">Insert</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <%- messages() %>

                    <% if(locals.errors) { %>
                        <ul class="">
                            <% Object.values(errors).forEach(function(error){ %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <form action="/customer/submit" id="usrform" method="POST">
                                ID:
                                <input type="number" name="id" value="" />
                                <br /> Name:
                                <input type="text" name="name" value="" />

                                <br /> Contact first name:
                                <input type="text" name="conFname" value="" />
                                <br /> Contact last name:
                                <input type="text" name="conLname" value="" />
                                <br /> Phone number:
                                <input type="text" name="phone" value="" />
                                <br /> Address Line 1:
                                <textarea rows="4" cols="50" name="addr1" form="usrform"></textarea>
                                <br /> Address Line 2:
                                <textarea rows="4" cols="50" name="addr2" form="usrform"></textarea>
                                <br /> City:
                                <input type="text" name="city" value="" />
                                <br /> State:
                                <input type="text" name="state" value="" />
                                <br /> Postal code:
                                <input type="number" name="postal" value="" />
                                <br /> Country:
                                <input type="text" name="country" value="" />
                                <br /> Employee Number:
                                <input type="number" name="EmpNum" value="" />
                                <br /> Credit limit:
                                <input type="number" name="creditLim" value="" />
                                <br />
                            </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-secondary">Cancel</button>
            </div>
        </div>
    </div>
</div>