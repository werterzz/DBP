<% include header.ejs %>
<div class="container mt-5">
  <div class="row">
    <% employees.forEach(function(emp){ %>
    <div class="col-sm-4">
      <div class="mainCard">
        <img src="/images/dogtest.jpg" alt="" class="avatar" />
        <div class="empDetail">
          <h6><%= emp.employeeNumber %></h6>
          <h6><%= emp.firstname %> <%= emp.lastname %></h6>
          <h6><%= emp.email %></h6>
          <h6><%= emp.jobTitle %></h6>
          <h6><%= emp.officeCode %></h6>
        </div>
        <div class="empButton mb-4">
          <div class="container">
            <div class="row">
              <div class="col-sm">
                <button type="button" class="btn btn-success" id="updateEmp">
                  Update
                </button>
              </div>
              <div class="col-sm">
                <button type="button" id="delEmpBtn" class="btn btn-danger">
                  Delete
                </button>
              </div>
            </div>
          </div>
        </div>
        <img src="/images/card.svg" alt="" class="card" />
      </div>
    </div>
    <% }) %>



  </div>
</div>
<a href="#">
  <img class="addMenu" id="myBtn" src="/images/addMenu.svg" alt="" />
</a>

